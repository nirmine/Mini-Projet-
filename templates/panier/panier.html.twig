    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Summary</th>
                    <th>Address</th>
            </tr>
        </thead>
        <tbody>
        {% for p in panier %}
            <tr>
                <td>{{ p.id}}</td>
                <td>{{ p.summary}}</td>
                 <td>{{ p.address}}</td>
            </tr>
       
        {% endfor %}
        </tbody>
    </table>

   
    
{% endblock %}
